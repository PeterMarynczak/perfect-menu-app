{% extends 'base.html.twig' %}

{% block body %}

	{% for message in app.flashes('message') %}
		<div class="alert alert-success">
			<h3>
				{{ message }}
			</h3>
		</div>
	{% endfor %}

	<section class="contact-section">
		<div class="container-fluid">
			<div class="row">
				<div
					class="col-lg-6 p-0">
					<!-- Map -->
					<div class="map">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11879.650348363319!2d12.489497640603357!3d41.89473696782428!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x132f61bc8af49cfd%3A0xdb173fd38c57770a!2sTrattoria%20Vecchia%20Roma!5e0!3m2!1spl!2spl!4v1647201588109!5m2!1spl!2spl" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
					</div>
				</div>
				<div class="col-lg-6 p-0">
					<div class="contact-warp">
						<div class="section-title mb-0">
							<h2>Waiter Contact</h2>
						</div>
						<p>Would you like to tell the waiter about your orders? On this page you can use our contact form to get in touch with our qualified service staff. It doesn't matter if something is missing or if there are extra requests for our dishes. Praise, suggestions and criticism are also welcome. Do not hesitate to contact us.</p>
						{{form(emailForm)}}
						</div>
					</div>
				</div>
			</div>
		</section>


	{% endblock %}
